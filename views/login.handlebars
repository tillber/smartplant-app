<div class="container" style="text-align: center">
    <div class="card card-login mx-auto mt-5" style="text-align: left">
      <div class="card-header">Login</div>
      <div class="card-body">
        <!-- Alerts -->
  			{{#if falseUser}}
          <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="fas fa-exclamation-triangle"></i> <strong>Unknown user!</strong> No existing user with the given username, please try again!
          </div>
  			{{/if}}

        {{#if wrongPassword}}
          <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="fas fa-times-circle"></i> <strong>Wrong password!</strong> Please, try again!
          </div>
  			{{/if}}

        {{#if reg}}
          <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <i class="fas fa-check-circle"></i> <strong>Successful registration</strong> You can now log in to your new account!
          </div>
  			{{/if}}

        <form method="post" action="/users/login">
          <div class="form-group">
            <label for="inputEmail">Email address</label>
            <input type="text" name="email" class="form-control" placeholder="Email address" required="required" autofocus="autofocus">
          </div>
          <div class="form-group">
            <label for="inputPassword">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Password" required="required">
          </div>
          <button class="btn btn-primary btn-block" type="submit">Login</button>
        </form>
		<hr>
        <div class="text-center">
          <a class="d-block small mt-3" href="/users/register">Register user</a>
        </div>
      </div>
    </div>
  </div>
